<div class="profile-page">
  <div class="container">
    <div class="page-header">
      <h2>Trang Cá Nhân</h2>
      <p>Quản lý tài khoản và xem tài sản của bạn</p>
    </div>

    <!-- Profile Info Cards -->
    <div class="profile-cards">
      <div class="profile-card">
        <h3>Thông tin tài khoản</h3>
        <div class="profile-info-item">
          <label>Họ tên:</label>
          <span>{{#if user.fullname}}{{user.fullname}}{{else}}{{user.username}}{{/if}}</span>
        </div>
        <div class="profile-info-item">
          <label>Email:</label>
          <span>{{user.email}}</span>
        </div>
        <div class="profile-info-item">
          <label>Số dư USD:</label>
          <span class="balance-value">${{balanceUsd}}</span>
        </div>
      </div>

      <div class="profile-card">
        <h3>Tài sản hiện có</h3>
        {{#if holdings}}
          <div class="holdings-grid">
            {{#each holdings}}
              <div class="holding-item">
                <div class="holding-symbol">{{symbol}}</div>
                <div class="holding-amount">{{amount}}</div>
                <a href="/trading?symbol={{symbol}}" class="btn-trade">Bán</a>
              </div>
            {{/each}}
          </div>
        {{else}}
          <p class="no-holdings">Chưa có coin nào</p>
        {{/if}}
      </div>
    </div>

    <!-- Logout Button -->
    <div class="profile-actions">
      <a href="/login/logout" class="logout-btn">Đăng xuất</a>
    </div>
  </div>
</div>

